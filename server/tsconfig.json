{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"strict": true,
		"types": ["node"],
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}