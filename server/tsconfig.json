{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@root": ["./"],
      "@domain/*": ["./domain/*"],
      "@usecase": ["./usecase/*"],
      "@socket/*": ["./socket/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__"]
}
